{
  "name": "nrm",
  "displayName": "NRM - Normal",
  "description": "NRM Language support for VSCode",
  "publisher": "nglam",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "ecx",
      "aliases": ["NRM", "nrm"],
      "extensions": [".nrm"],
	  "icon": {
		"light": "icons/ecx-light.png",
		"dark": "icons/ecx-dark.png"
	  },
      "configuration": "./language-configuration.json"
    }, {
		"id": "ec",
		"aliases": ["Unsafe Ecliptix", "ec"],
		"extensions": [".ec"],
		"icon": {
			"light": "icons/ecx-light.png",
			"dark": "icons/ecx-dark.png"
	  	},
    	"configuration": "./language-configuration.json"
	}],
    "grammars": [{
      "language": "ecx",
      "scopeName": "source.ecx",
      "path": "./syntaxes/ecx.tmLanguage.json"
    }, {
		"language": "ec",
		"scopeName": "source.ec",
		"path": "./syntaxes/ec.tmLanguage.json"
	}]
  }
}
